        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <Button onAction="#SendMessage" layoutX="500.0" layoutY="330.0" mnemonicParsing="false"  prefHeight="32.0" prefWidth="83.0" text="Send" />

</children>
